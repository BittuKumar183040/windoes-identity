#!/usr/bin/env node

import 'dotenv/config';
import app from '../app.js';
import http from 'http';
import { testDbConnection } from '../utility/db/testConnection.js';
import { runMigrations } from '../utility/db/knex/migrate.js';
import logger from '#logger';

var port = normalizePort(process.env.PORT || '8001');
app.set('port', port);

await testDbConnection();
await runMigrations();

var server = http.createServer(app);

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);


function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
    default:
      throw error;
  }
}

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  logger.info(`API Docs: ${process.env.BASE_URL}/identity-service/docs`);
  logger.info('Listening on ' + bind);
}
